<div class="d-flex justify-content-between align-items-center sticky-top" style="background-color: #F4F4F4">
  <h1>All flats</h1>
  <%= link_to "✚ new flat", new_flat_path, class: "btn btn-outline-primary btn-sm rounded-pill" %>
</div>
<div>
  <% @flats.each do |flat|%>
    <div class="card mb-3" style="max-width: 100%;">
      <div class="row no-gutters">
        <div class="col-md-4" style="background-image: url('<%= flat.picture %>'); background-size: cover; background-position: center;">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <span class="badge badge-pill badge-primary">🌎 <%= flat.country %></span><span>  </span><span class="badge badge-pill badge-secondary">🏙 <%= flat.city %></span>
            <p></p>
            <h5 class="card-title"><%= flat.name %></h5>
            <p class="card-text"><%= flat.description %></p>
            <span class="badge badge-pill badge-light">🧍<%= flat.number_of_guests %></span><span>  </span><span class="badge badge-pill badge-light">€ <%= flat.price_per_night/100.00 %></span>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
